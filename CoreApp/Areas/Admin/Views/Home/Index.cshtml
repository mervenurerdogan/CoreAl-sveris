@model List<Urun>
@*@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    

}*@

<!DOCTYPE html>
<html lang="tr">
<head>
    <title>Admin Panel</title>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />

    <link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <a asp-action="Ekle" asp-controller="Home" asp-area="Admin" class="btn btn-primary btn-sm my-2">Ekle</a>
    <table class="table table-sm table-bordered table-hover mt-2">
        <tr>
            <th>Urun ID</th>


            <th>Urun Ad</th>
            <th>Urun Kategorileri</th>
            <th>Urun Fiyat</th>
            <th>Urun Guncelle/Sil</th>
        
        </tr>

        @foreach (var item in Model)
        {

    <tr>
        <td>@item.UrunID</td>

        <td>@item.UrunAd</td>
        <td>

            <getirKategoriAd urun-id="@item.UrunID"></getirKategoriAd>
        </td>
        <td>@item.Fiyat</td>
        <td>
            <a asp-action="Sil" asp-controller="Home" asp-area="Admin" asp-route-id="@item.UrunID" class="btn btn-danger btn-sm">Sil</a>
            @*Urun id yi göre gitmek için asp-route id seçtik*@
            <a asp-action="Guncelle" asp-controller="Home" asp-area="Admin" asp-route-id="@item.UrunID" class="btn btn-warning btn-sm">Güncelle</a>
            @*Urun id yi göre gitmek için asp-route id seçtik*@

            <a asp-action="AtaKategori" asp-controller="Home" asp-area="Admin" asp-route-id="@item.UrunID" class="btn btn-dark btn-sm">Kategori Ekle</a>
            @*Urun id yi göre gitmek için asp-route id seçtik*@


        </td>

        

       

    </tr>

        }


    </table>

</body>
</html>