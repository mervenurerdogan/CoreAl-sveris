
@model  UrunGuncelleModel

<!DOCTYPE html>
<html lang="tr">
<head>
    <title></title>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />

</head>
<body>

    <form asp-action="Guncelle" asp-controller="Home" asp-area="Admin" method="post"
          class="w-75 mx-auto p-3" enctype="multipart/form-data">

        <input type="hidden" asp-for="@Model.Urunid"/>
        <div class="form-group">


            <label>Urun Adı:</label>
            <span asp-validation-for="@Model.UrunAdi" class="text-danger"></span>
            <input asp-for="@Model.UrunAdi" class="form-control" />

        </div>

        <div class="form-group">


            <label>Urun Fiyatı:</label>
            <span asp-validation-for="@Model.UrunFiyat" class="text-danger"></span>
            <input asp-for="@Model.UrunFiyat" class="form-control" />

        </div>

        <div class="form-group">
            <label>Urun Resmi:</label>
            <input type="file" asp-for="@Model.Resim" class="form-control-file" />

        </div>

        <div class="form-group">
            <a  asp-action="Index" asp-controller="Home" asp-area="Admin" class="btn btn-warning btn-sm">Geri Dön</a>
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>

    </form>


    @section JavaScript{

        <script src="~/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
        <script src="~/jqueryValidate/jquery.validate.min.js"></script>

    }

</body>
</html>