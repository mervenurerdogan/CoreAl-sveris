@{
}
@model KategoriGuncelleModel



<!DOCTYPE html>
<html lang="tr">
<head>
    <title></title>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />

</head>
<body>
    <input type="hidden" asp-for="KategoriId" />
    <form asp-action="Ekle" asp-controller="Kategori" asp-area="Admin" method="post"
          class="w-75 mx-auto p-3" enctype="multipart/form-data">


        <div class="form-group">


            <label>Kategori Adı:</label>
            <span asp-validation-for="@Model.KategoriAd" class="text-danger"></span>
            <input asp-for="@Model.KategoriAd" class="form-control" />

        </div>


        <div class="form-group">
            <a asp-action="Index" asp-controller="Kategori" asp-area="Admin" class="btn btn-danger " >Vazgeç</a>
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>

    </form>


    @section JavaScript{

        <script src="~/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
        <script src="~/jqueryValidate/jquery.validate.min.js"></script>

    }

</body>
</html>

