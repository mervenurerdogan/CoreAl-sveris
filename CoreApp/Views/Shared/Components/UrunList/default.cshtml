
@model List<Urun>

<div class="row">

    @if (Model.Count > 0)
    {    @*seçilen kataegoride ürün varsa listele*@

    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <div class="card mr-1 mb-1">
                <img src="/img/@item.Resim" class="card-img-top" alt="Resim Yok" />
                <div class="card-body">
                    <h5 class="card-title">@item.UrunAd</h5>
                    <p class="card-text">@item.Fiyat</p>
                    <a asp-action="UrunDetay" asp-controller="Home" asp-route-id="@item.UrunID" class="btn btn-primary float-right">Detay Göster</a>
                </div>
            </div>
        </div>

    }

   }


    else {

    <div class="alert alert-info text-center">
        herhangi bir ürün bulunmamaktadır.

    </div>

    @*seçileen kataeogide ürün yoksa alert ver *@

    }


</div>

