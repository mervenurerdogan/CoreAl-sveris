<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />

</head>
<body>

    @* Navbar *@

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="#">CoreAlışveriş</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" asp-action="Sepet"  asp-controller="Home">Sepetim <span class="sr-only">(current)</span></a>
                    </li>

                </ul>
            </div>
        </div>

    </nav>

    @*Navbar Son*@
    <div class=" mt-2">
        <div class="container-fluid">
            @*bütün sayfayı kaplaması için container fluid yaptık tasarım taşmasın diye*@
            @RenderBody()
        </div>




    </div>
    <script src="~/jquery/jquery.js"></script>
    <script src="~/twitter-bootstrap/js/bootstrap.min.js"></script>

    @RenderSection("JavaScript", false)

</body>
</html>
