@model List<CoreApp.Entities.Urun>


<html>

    <head>

        <link href="~/content/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    </head>

    <body>
        <br />
        <br />
       
        <table class="table tabel-sm table-bordered">
            <tr>


                <th>ÜrunId</th>
                <th>Ürün Adı</th>
                <th>Ürün Fiyatı</th>
            </tr>

            @foreach (var item in Model)
            {



