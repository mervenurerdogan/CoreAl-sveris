@model KulllaniciGirisModel
<!DOCTYPE html>
<html lang="en">
<head>
    <title></title>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />

    <link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    <form asp-action="GirisYap" method="post" class="p-4 w-50 mx-auto shadow">

        <h2 class="mx-auto">Kullanıcı Giriş Yap</h2>
        <br />

        <div class="form-group">
            <label>Kullanıcı Adı</label>
            <span asp-validation-for="@Model.KullaniciAdi" class="text-danger"></span>
            <input type="text" asp-for="@Model.KullaniciAdi" class="form-control" />
        </div>

        <div class="form-group">
            <label>Şifre</label>
            <span asp-validation-for="@Model.Sifre"  class="text-danger"></span>
            <input type="password" asp-for="@Model.Sifre" class="form-control" />
        </div>

        <div class="form-check">
            <input type="checkbox" asp-for="@Model.Benihatirla" class="form-check-input" />
            <label asp-for="Benihatirla" class="form-check-label">Beni Hatırla</label>
        </div>
        <br />
        <div class="form-group">
            <button type="submit" class="btn btn-block btn-info">Giriş Yap</button>
        </div>

    </form>

    @section JavaScript{

        <script src="~/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
        <script src="~/jqueryValidate/jquery.validate.min.js"></script>

    }
</body>
</html>