@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<html>

<head>
    <title>IndexPage</title>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />

    <link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    @if (TempData["Bildirim"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>Başarılııı!</strong> @TempData["Bildirim"].ToString()
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }



    <div class="row">
        <div class="col-md-3">
            @await Component.InvokeAsync("KategoriListe")
        </div>
        <div class="col-md-9">
            @await Component.InvokeAsync("UrunList", new
            {

           katagoriId = ViewBag.Kategorid

       })
        </div>




    </div>






</body>
</html>

